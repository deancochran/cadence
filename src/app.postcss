/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
	@apply h-full overflow-hidden !scroll-smooth;
}

html {
	-webkit-tap-highlight-color: rgba(128, 128, 128, 0.5);
}
::selection {
	@apply bg-primary-500/30;
}

/* Page Styles */
mark {
	@apply bg-slate-300;
}
